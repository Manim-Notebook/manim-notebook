// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      // "preLaunchTask": "Watch Files",
      "sourceMaps": true
    },
    {
      "name": "Test Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/tests/fixtures",
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/tests/utils/testRunner.js"
      ],
      "outFiles": [
        "${workspaceFolder}/out/test/**/*.js"
      ],
      // "preLaunchTask": "Prepare For Tests",
      "sourceMaps": true,
      "env": {
        // also see tests/main.ts
        "IS_TESTING": "true",
        "TEST_BASE_PATH": "${workspaceFolder}"
      }
    }
  ]
}